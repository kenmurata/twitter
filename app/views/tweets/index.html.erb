<p><%= notice %></p>
<h1>つぶやき</h1>
<% @tweets.each do |tweet| %>
    <p>ツイート内容: <%= tweet.content %></p>
    <%= link_to "編集", edit_tweet_path(tweet.id) %>
    <%= link_to "削除", tweet_path(tweet.id), method: :delete, data: {confirm: '本当に削除してよいですか？' }%>
<% end %>
<br>
<%= link_to "つぶやく", new_tweet_path %>